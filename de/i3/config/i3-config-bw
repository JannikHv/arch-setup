### CONFIGURATION ###

new_window pixel 3

# Set mod key
set $mod Mod1

# Set default font
font pango:opensans regular 11

# Mouse drag + Mod key to move floating windows
floating_modifier $mod

# Colorize i3
client.focused          #303642 #303642 #ffffff #303642 #303642
client.focused_inactive #999999 #999999 #eeeeee #999999 #999999
client.unfocused        #999999 #999999 #eeeeee #999999 #999999
client.urgent           #303642 #303642 #ffffff #303642 #303642

# Restart/Reload i3
bindsym $mod+Shift+c reload
bindsym $mod+Shift+r restart

# Gap size
#smart_gaps on
gaps inner 10
gaps outer 10

bindsym $mod+g       gaps inner current set 0  gaps outer current set 0
bindsym $mod+Shift+g gaps inner current set 12 gaps outer current set 12

# Exit i3
bindsym $mod+Shift+e exec i3-msg exit

# Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5%
bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5%
bindsym XF86AudioMute        exec --no-startup-id pactl set-sink-mute   0 toggle

# Brightness controls
#bindsym XF86MonBrightnessUp   exec xbacklight -inc 20
#bindsym XF86MonBrightnessDown exec xbacklight -dec 20

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause
bindsym XF86AudioStop exec playerctl stop
bindsym XF86AudioNext exec playerctl next
bindsym XF86AudioPrev exec playerctl previous

# Window resize mode
mode "resize" {
        # Arrow keys
        bindsym Left  resize shrink width  10 px or 10 ppt
        bindsym Down  resize grow   height 10 px or 10 ppt
        bindsym Up    resize shrink height 10 px or 10 ppt
        bindsym Right resize grow   width  10 px or 10 ppt

        # Exit resize mode
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# i3bar
bar {
        position        top
        tray_output     none
        font            pango:OpenSans Regular 12
        status_command  i3blocks
        i3bar_command   i3bar -t

        colors {
                background #ffffffdd
                statusline #000000

                #                  Border     Bg        Text
                focused_workspace  #ffffffdd  #ffffffdd #000000
                active_workspace   #ffffffdd  #ffffffdd #000000
                inactive_workspace #ffffffdd  #ffffffdd #646464
                urgent_workspace   #ffffffdd  #ffffffdd #646464
                binding_mode       #ffffffdd  #ffffffdd #323232
        }
}



### APPLICATIONS ###

# Open terminal
bindsym $mod+Return exec termite

# Open rofi
bindsym $mod+Shift+Return exec --no-startup-id rofi -modi drun -show drun

# Lock screen
bindsym $mod+Shift+l exec --no-startup-id ~/.config/i3/scripts/blurlock.sh

bindsym --release Print       exec --no-startup-id scrot -z -e    'mv $f ~/Pictures/'
bindsym --release Shift+Print exec --no-startup-id scrot -z -s -e 'mv $f ~/Pictures/'


### WINDOW ###

# Change window focus
bindsym $mod+Left  focus left
bindsym $mod+Down  focus down
bindsym $mod+Up    focus up
bindsym $mod+Right focus right

# Move windows
bindsym $mod+Shift+Left  move left
bindsym $mod+Shift+Down  move down
bindsym $mod+Shift+Up    move up
bindsym $mod+Shift+Right move right

# Change container layout
bindsym $mod+w layout tabbed
bindsym $mod+e layout toggle split
#bindsym $mod+s layout stacking

# Split windows horizontal/vertical
bindsym $mod+h split h
bindsym $mod+v split v

# Toggle fullscreen
bindsym $mod+f fullscreen toggle

# Change focus of tiling/floating windows
bindsym $mod+space focus mode_toggle

# Toggle tiling/floating
bindsym $mod+Shift+space floating toggle

# Kill focused window
bindsym $mod+minus   kill
bindsym $mod+Shift+q kill



### WORKSPACES ###

# Move workspaces to other displays
bindsym $mod+Ctrl+Right move workspace to output right
bindsym $mod+Ctrl+Left  move workspace to output left

# Set default workspaces
set $workspace1  "1:    "
set $workspace2  "2:    "
set $workspace3  "3:    "
set $workspace4  "4:    "
set $workspace5  "5:    "
set $workspace6  "6:    "
set $workspace7  "7:    "
set $workspace8  "8:    "
set $workspace9  "9:    "
set $workspace10 "10:   "

# Switch to other workspaces
bindsym $mod+1 workspace $workspace1
bindsym $mod+2 workspace $workspace2
bindsym $mod+3 workspace $workspace3
bindsym $mod+4 workspace $workspace4
bindsym $mod+5 workspace $workspace5
bindsym $mod+6 workspace $workspace6
bindsym $mod+7 workspace $workspace7
bindsym $mod+8 workspace $workspace8
bindsym $mod+9 workspace $workspace9
bindsym $mod+0 workspace $workspace10

# Move window to other workspaces and focus it
bindsym $mod+Shift+1 move container to workspace $workspace1  workspace $workspace1
bindsym $mod+Shift+2 move container to workspace $workspace2  workspace $workspace2
bindsym $mod+Shift+3 move container to workspace $workspace3  workspace $workspace3
bindsym $mod+Shift+4 move container to workspace $workspace4  workspace $workspace4
bindsym $mod+Shift+5 move container to workspace $workspace5  workspace $workspace5
bindsym $mod+Shift+6 move container to workspace $workspace6  workspace $workspace6
bindsym $mod+Shift+7 move container to workspace $workspace7  workspace $workspace7
bindsym $mod+Shift+8 move container to workspace $workspace8  workspace $workspace8
bindsym $mod+Shift+9 move container to workspace $workspace9  workspace $workspace9
bindsym $mod+Shift+0 move container to workspace $workspace10 workspace $workspace10

# Assign default applications to workspaces
assign [class="Atom"]            $workspace2
assign [class="Google-chrome"]   $workspace3
assign [class="Rhythmbox"]       $workspace4
assign [class="Audacity"]        $workspace4
assign [class="Easytag"]         $workspace4
assign [class="Vlc"]             $workspace5
assign [class="libreoffice"]     $workspace6
assign [class="Gimp-2.8"]        $workspace7
assign [class="Steam"]           $workspace8
assign [class="payday2_release"] $workspace9
